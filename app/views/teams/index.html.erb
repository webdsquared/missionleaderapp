<h1>Listing teams</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Leader name</th>
    <th>Leader email</th>
    <th>Depart</th>
    <th>Return</th>
    <th>Destination</th>
    <th>Trip cost</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= team.name %></td>
    <td><%= team.leader_name %></td>
    <td><%= team.leader_email %></td>
    <td><%= team.depart %></td>
    <td><%= team.return %></td>
    <td><%= team.destination %></td>
    <td><%= team.trip_cost %></td>
    <td><%= team.description %></td>
    <td><%= link_to 'Show', team %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

